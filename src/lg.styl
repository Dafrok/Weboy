@media(min-width: 801px)
  .contWrap
    padding-top 54px
  .home-sub-nav
    display block
    position fixed
    top 44px
    bottom 0
    left 0
    width 44px
    .item
      flex initial
      &.isActive
        color white
        background #ff8200
        &::before
          display none

@media(min-width: 1001px)
  .contWrap
    padding 54px 10px 0 54px
    width 100%
    box-sizing border-box
  [data-node=homeWrap]
    width auto
    column-count 2
    .card
      box-sizing border-box
      display inline-block
      width 100%
  .mod-pagination
    position fixed
    left 0
    bottom 0
    width 44px
    z-index 10
    display block
    border-radius 0
    border 0
    .select-txt
      display none
    .plus
      justify-content center
    &.line-around
      border 0
      border-radius 0



@media(min-width: 1201px)
  [data-node=homeWrap]
    column-count 3